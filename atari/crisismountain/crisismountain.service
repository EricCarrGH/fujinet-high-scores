[Unit]
Description=Atari Crisis Mountain Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/crisismountain "/tnfs/Atari 8-bit/Games/High Score Enabled/Crisis Mountain.atr" "/var/www/atari-scores/crisis-mountain.html"

[Install]
WantedBy=multi-user.target
