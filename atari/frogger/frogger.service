[Unit]
Description=Atari Frogger Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/frogger "/tnfs/Atari 8-bit/Games/High Score Enabled/Frogger.atr" "/var/www/atari-scores/frogger.html"

[Install]
WantedBy=multi-user.target
