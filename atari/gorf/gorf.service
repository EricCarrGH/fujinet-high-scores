[Unit]
Description=Atari Gorf Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/gorf "/tnfs/Atari 8-bit/Games/High Score Enabled/Gorf.atr" "/var/www/atari-scores/gorf.html"

[Install]
WantedBy=multi-user.target
