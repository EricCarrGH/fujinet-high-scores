[Unit]
Description=Atari Spelunker Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/spelunker "/tnfs/Atari 8-bit/Games/High Score Enabled/Spelunker.atr" "/var/www/atari-scores/spelunker.html"

[Install]
WantedBy=multi-user.target
