[Unit]
Description=Atari Jumpman Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/jumpman "/tnfs/Atari 8-bit/Games/High Score Enabled/Jumpman.atr" "/var/www/atari-scores/jumpman.html"

[Install]
WantedBy=multi-user.target
