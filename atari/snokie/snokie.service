[Unit]
Description=Atari Snokie Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/snokie "/tnfs/Atari 8-bit/Games/High Score Enabled/Snokie.atr" "/var/www/atari-scores/snokie.html"

[Install]
WantedBy=multi-user.target
