[Unit]
Description=Atari Rear Guard Hi-scores
After=remote-fs.target
After=syslog.target

# replace /tnfs with your TNFS directory

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/rearguard "/tnfs/Atari 8-bit/Games/High Score Enabled/Rear Guard (BASIC).atr" "/var/www/atari-scores/rearguard.html"

[Install]
WantedBy=multi-user.target
